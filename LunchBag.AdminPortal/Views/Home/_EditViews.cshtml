@model EventViewsSettingsViewModel

@using (Html.BeginForm("EditViews", "Home", FormMethod.Post, new { id = "formEvent" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.EventId)
    <div class="form-horizontal">
        <div><input class="btn btn-success pull-right btn-sm" type="button" onclick="addElement('#gridViews', 'AddView')" value="Add View" /></div>
        <table id="gridViews" class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">View</th>
                    <th>Value</th>
                    <th>Cycling Interval (seconds)</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.EventViews != null)
                {
                    @Html.EditorFor(model => model.EventViews)
                }
            </tbody>
        </table>
        <div><input type="button" onclick="saveFormUpdate('The views settings were successfully saved.')" value="Save Views Settings" class="btn btn-primary btn-block" /></div>
    </div>
}